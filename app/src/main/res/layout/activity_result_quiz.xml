<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/MediumSlateBlue"
    android:gravity="center_horizontal"
    android:padding="20dp"
    tools:context=".activities.ResultQuizActivity">
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/tv_trophy"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_marginTop="170dp"
        android:contentDescription="image"
        android:src="@drawable/trophy"/>
    <TextView
        android:id="@+id/tv_congratulations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Congratulations!"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/mintCream"
        android:textSize="20sp"
        android:text="Your score is 9 out of 10"/>
    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:backgroundTint="@color/mintCream"
        android:text="COMPLETE"
        android:textColor="@color/green"
        android:textSize="25sp"
        android:textStyle="bold" />
</LinearLayout>