<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ListView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/my_words_list"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center"
                  android:visibility="invisible"
                  android:orientation="vertical"
                  android:id="@+id/empty_layout"
    >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Your words is empty!"/>
        <Button android:layout_height="wrap_content" android:id="@+id/back_to_home" android:layout_marginTop="10dp" android:layout_width="wrap_content"
                android:text="Back to home">
        </Button>
    </LinearLayout>
</LinearLayout>